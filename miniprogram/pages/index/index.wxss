.wrap {
  height: 100vh;
  background: #ccc;
  padding-top: 50rpx;
  box-sizing: border-box;
}
.item-block {
  background: #fff;
  padding: 50rpx;
}
.item-layout {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: skyblue;
  border-radius: 10rpx;
}
.item-text {
  font-size: 26rpx;
}