.wrap {
  position: relative;
  width: 300px;
  height: 300px;
  margin: 0 auto;
}
#canvas_circle {
  width: 300px;
  height: 300px;
  border: 1px solid skyblue;
}
.result {
  position: absolute;
  width: 20px;
  font-size: 15px;
  top: 50%;
  left: 50%;
  bottom: -50px;
  white-space: normal;
  word-break:break-all;
}
.result-pointer {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 50px;
  height: 50px;
  margin-top: -25px;
  margin-left: -25px;
  border-radius: 50%;
  background: skyblue;
}
.result-pointer_arrow {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 30px;
  height: 30px;
  margin-left: -15px;
  margin-top: -28px;
  transform: rotate(45deg);
  background: skyblue;
}
.btn-wrap {
  display: flex;
  margin-top: 30px;
}
.btn-item {
  width: 50%;
  text-align: center;
  border: 1px solid skyblue;
  position: relative;
  padding: 10px 0;
}
.input_item{
  width: 60px;
  padding: 0 10px;
  font-size: 15px;
  display: inline-block;
  border: 1px solid #ccc;
  text-align: center;
}
.text_item {
  display: block;
  font-size: 14px;
  width: 50px;
  background-color: skyblue;
  color: #fff;
  margin: 0 auto;
}
.result_item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
}
