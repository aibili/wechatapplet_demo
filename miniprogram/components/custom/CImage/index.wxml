<view class="qwui-website_image">
  <!-- 一行多张 -->
  <view wx:if="{{config.type!==5&&config.type!==6}}" class='qwui-website_image_1'>
    <view wx:for="{{config.type}}" wx:key="{{index}}" style='flex:1;position:relative;' class='qwui-website_image_1_item'>
      <image wx:if="{{detail[index].src}}" bindtap='openLink' data-img_w="{{750/config.type}}" bindload="swiperImgLoad" class="qwui-honor_img" lazy-load mode="aspectFill" data-index="{{index}}"
        wx:key="{{ detail[index] }}" src="{{ detail[index].src }}" style='height:{{imgHeight}}rpx;'>
      </image>
      <view wx:else></view>
    </view>
  </view>
  <!-- 1左2右 -->
  <view wx:if="{{config.type === 5}}" class='qwui-website_image_2' style='height:750rpx;'>
    <view style='flex:1;box-sizing:border-box;position:relative;' class='flex_center'>
      <image wx:if="{{detail[0].src}}" bindtap='openLink' class="qwui-honor_img" lazy-load mode="aspectFill" data-index="{{0}}" wx:key="{{ detail[0] }}" src="{{ detail[0].src }}" style='width:100%;height:100%;'>
      </image>
    </view>
    <view style='flex:1;display:flex;flex-direction: column;'>
      <view class='flex_center' style='position:relative;flex:1;font-size:0;width:100%;box-sizing:border-box;padding: 0 0 0 0;'>
        <image wx:if="{{detail[1].src}}" bindtap='openLink' class="qwui-honor_img" lazy-load mode="aspectFill" data-index="{{1}}" wx:key="{{ detail[1] }}" src="{{ detail[1].src }}" style='width:100%;height:100%;'>
        </image>
      </view>
      <view class='flex_center' style='position:relative;flex:1;width:100%;box-sizing:border-box;padding: 0 0 0 0;'>
        <image wx:if="{{detail[2].src}}" bindtap='openLink' class="qwui-honor_img" lazy-load mode="aspectFill" data-index="{{2}}" wx:key="{{ detail[2] }}" src="{{ detail[2].src }}" style='width:100%;height:100%;'>
        </image>
      </view>
    </view>
  </view>
  <!-- 1上2下 -->
  <view wx:if="{{config.type === 6}}" class='qwui-website_image_3' style='height:750rpx;'>
    <view style='position:relative;flex:1;box-sizing:border-box;padding-bottom:0;'>
      <image wx:if="{{detail[1].src}}" bindtap='openLink' class="qwui-honor_img" lazy-load mode="aspectFill" data-index="{{0}}" wx:key="{{ detail[0] }}" src="{{ detail[0].src }}" style='width:100%;height:100%;'>
      </image>
    </view>
    <view style='flex:1;display:flex;'>
      <view class='flex_center' style='position:relative;flex:1;box-sizing:border-box;padding:0 0 0 0;'>
        <image wx:if="{{detail[1].src}}" bindtap='openLink' class="qwui-honor_img" lazy-load mode="aspectFill" data-index="{{1}}" wx:key="{{ detail[1] }}" src="{{ detail[1].src }}" style='width:100%;height:100%;'>
        </image>
      </view>
      <view class='flex_center' style='position:relative;flex:1;box-sizing:border-box;padding:0 0 0 0;'>
        <image wx:if="{{detail[2].src}}" bindtap='openLink' class="qwui-honor_img" lazy-load mode="aspectFill" data-index="{{2}}" wx:key="{{ detail[2] }}" src="{{ detail[2].src }}" style='width:100%;height:100%;'>
        </image>
      </view>
    </view>
  </view>
</view>