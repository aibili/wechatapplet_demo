.qwui-website_swiper {
  position: relative;
}

.qwui-swiper_wrap .qwui-slide_image {
  width: 100%;
  height: 100%;
}

.qwui-website_swiper .qwui-swiper_dots {
  position: absolute;
  bottom: 12rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.qwui-website_swiper .qwui-swiper_dot2 {
  display: inline-block;
  width: 32rpx;
  height: 4rpx;
  margin: 0 8rpx;
  border-radius: 4rpx;
  background-color: #fff;
  box-shadow: 0 0 2rpx 0rpx rgba(191, 191, 191, 1);
}

.qwui-website_swiper .qwui-dot2_active {
  padding: 0 4rpx;
  box-shadow: none;
}

.qwui-swiper_dot1 {
  display: inline-block;
  margin: 0 8rpx;
  width: 12rpx;
  height: 12rpx;
  background: #fff;
  border-radius: 6rpx;
  box-shadow: 0 0 2rpx 0rpx rgba(191, 191, 191, 1);
}

.qwui-website_swiper .qwui-dot1_active {
  box-shadow: none;
}

.qwui-swiper_dot3 {
  position: absolute;
  bottom: 12rpx;
  right: 30rpx;
  width: 64rpx;
  height: 36rpx;
  background: rgba(3, 3, 3, 0.25);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qwui-swiper_dot3_text {
  font-size: 20rpx;
  font-family: Helvetica;
  color: rgba(255, 255, 255, 1);
  line-height: 20rpx;
}
