.screen_wrap {
  background: #F9F9F9;
  padding: 20rpx 10rpx 0;  
}
.btn_size_change {
  width: 500rpx;
}
.sel_wrap {
  position: fixed;
  top: -100%;
  left: 0;
  width: 100%;
  background: #fff;
  height: 100%;
  z-index: 100;   
}
.sel_container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;  
}

.sel_container_btn {
  display: flex;  
}
.container_btn_item {
  width: 100%;
}
.sel_item {
  margin-top: 20rpx;  
  border-bottom: 1px solid #ccc;  
}
.sel_container_list .sel_item:last-child{
  border-bottom: none;
}
.sel_item_title {
  font-size: 28rpx;
  padding: 0 20rpx;  
}
.sel_item_list {
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between;   */
  font-size: 0;
  margin-top: 20rpx;
  padding: 0 20rpx;  
}
.list_item {
  padding: 14rpx 54rpx;  
  border: 1px solid #ccc;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;  
  color: #676767; 
  margin-right: 40rpx;
}
.list_item_sel {
  background: #4487FD;
  border-color: #4487FD;
  color: #fff;
}
.sel_list {
  display: flex;
  flex-wrap: wrap;  
  margin-top: 20rpx;  
}
.sel_list_item {
  border: 1px solid #ccc;
  padding: 6rpx 24rpx;
  font-size: 30rpx;
  background: #fff;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;    
}
.sel_list_item_del {
  margin-left: 16rpx;
  font-size: 32rpx;  
}